rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Lessons collection: 
    // Publicly readable for the PWA users
    // Write access should be restricted to admin/migration scripts
    match /lessons/{lessonId} {
      allow read: if true;
      allow write: if false; 
    }
    
    // Default safety: deny access to any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
